        <Label Content="Hand Coordinates " HorizontalAlignment="Left" Height="26" Margin="852,129,0,0" VerticalAlignment="Top" Width="108"/>
        <Label Content="Hand Coordinates " HorizontalAlignment="Left" Height="26" Margin="415,578,0,0" VerticalAlignment="Top" Width="108"/>
